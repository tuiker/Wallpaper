<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_wallpaper1"
            android:layout_width="76dp"
            android:layout_height="76dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_wallpaper2"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginStart="6dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_wallpaper1"
            app:layout_constraintStart_toEndOf="@+id/iv_wallpaper1"
            app:layout_constraintTop_toTopOf="@+id/iv_wallpaper1" />

        <ImageView
            android:id="@+id/iv_wallpaper3"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_marginTop="6dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/iv_wallpaper1"
            app:layout_constraintStart_toStartOf="@+id/iv_wallpaper1"
            app:layout_constraintTop_toBottomOf="@+id/iv_wallpaper1" />

        <ImageView
            android:id="@+id/iv_wallpaper4"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_wallpaper3"
            app:layout_constraintEnd_toEndOf="@+id/iv_wallpaper2"
            app:layout_constraintStart_toStartOf="@+id/iv_wallpaper2"
            app:layout_constraintTop_toTopOf="@+id/iv_wallpaper3" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/wallpaper_is_valid"
            android:textColor="@color/_222222"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/iv_wallpaper1"
            app:layout_constraintTop_toBottomOf="@+id/iv_wallpaper3" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#999999"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/iv_wallpaper1"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>